@{
    Layout = "_LayoutEmployer";
    Employer employers= ViewData["employer"] != null ? (Employer)ViewData["employer"] : null;
    CompanyType companyTypes= ViewData["companyType"] != null ? (CompanyType)ViewData["companyType"] : null;
    List<CompanyType> companyTypesList = ViewData["companyTypeList"] != null ? (List<CompanyType>)ViewData["companyTypeList"] : null;
}

  <link rel="stylesheet" href="style.css">

  <div class="uk-card uk-card-large uk-card-hover uk-card-body uk-card-default">
    <div class="uk-card-title">Название компании: @employers.Name</div>
    <div>Адрес: @employers.Address</div>
    <div>Дата создания: @employers.DateOfCreate</div>
    <div>Почта: @employers.Email</div>
    <div>Телефон: @employers.Phone</div>
    <div>Тип компании: @companyTypes.Name</div>
    <div class="buttons">
      <button uk-toggle="target:#editInfo" class="uk-button">Редактировать информацию</button>
        <button uk-toggle="target:#editPass" class="uk-button">Изменить пароль</button>
    </div>
  </div>

<div id="editInfo" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <form asp-action="ProfileEdit">
            <h2 class="uk-modal-title">Изменение профиля</h2>
            <label>Название</label>
            <input class="uk-input uk-margin-bottom" placeholder="Название" name="Name" value="@employers.Name" />
            <label>Адрес</label>
            <input class="uk-input uk-margin-bottom" placeholder="Адрес" name="Address" value="@employers.Address" />
            <label>Дата создания</label>
            <input class="uk-input uk-margin-bottom" type="date" name="DateOfCreate" value="@employers.DateOfCreate" />
            <label>Почта</label>
            <input class="uk-input uk-margin-bottom" name="Email" value="@employers.Email" />
            <label>Телефон</label>
            <input class="uk-input uk-margin-bottom" type="number" name="Phone" value="@employers.Phone" />
            <label>Тип компании</label>
            <select title="edit" class="uk-select uk-margin-bottom" name="CompanyType">
                <option value=""></option>
                @foreach (var value in companyTypesList)
                {
                    <option value="@value.Id">@value.Name</option>
                }
            </select>
            <input type="hidden" name="" value="" />
            <div class="uk-margin-top">
                <button class="uk-button uk-button-primary" type="submit">Сохранить изменения</button>
                <button class="uk-button uk-modal-close">Отмена</button>
            </div>
        </form>
    </div>
</div>

<div id="editPass" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <form asp-action="EditPass">
            <h2 class="uk-modal-title">Изменение пароля</h2>
            <label>Новый пароль</label>
            <input class="uk-input uk-margin-bottom" placeholder="Новый пароль" name="Password"/>
            
            <div class="uk-margin-top">
                <button class="uk-button uk-button-primary" type="submit">Сохранить изменения</button>
                <button class="uk-button uk-modal-close">Отмена</button>
            </div>
        </form>
    </div>
</div>